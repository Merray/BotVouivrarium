<?xml version="1.0" encoding="UTF-8" ?>
<Configuration status="WARN">

    <Appenders>

        <Console name="stdout" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{dd MMM yyyy HH:mm:ss,SSS} [%t] %-5level - %msg | (%F:%L)%n"/>
        </Console>
        <File name="file" fileName="logs/botvouivrarium.log">
            <PatternLayout pattern="%d{dd MMM yyyy HH:mm:ss,SSS} [%t] %-5level - %msg | (%F:%L)%n"/>

        </File>


    </Appenders>


    <Loggers>

        <Root level="info">
            <AppenderRef ref="stdout"/>
            <AppenderRef ref="file"/>
        </Root>

    </Loggers>

</Configuration>